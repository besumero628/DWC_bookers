<!--booksの一覧表示-->
<h1>Books</h1>
<!--table表示-->
<table>
  <!--collumn名-->
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <!--booksの内容-->
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id), method: :get %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
      </tr>
    <% end %>
    
  </tbody>

</table>

<!--新規投稿-->
<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <div class = "field">
    <%= f.label :title, "title" %>
    <%= f.text_field :title, class: "book_title" %>
  </div>
  <div class = "field">
    <%= f.label :body, "body" %>
    <%= f.text_area :body, class: "book_text" %>
  </div>
  <div class = "actions">
    <%= f.submit "Create Book" %>
  </div>


<% end %>