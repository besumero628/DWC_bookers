<!--booksの一覧表示-->
<h1>Books</h1>
<!--table表示-->
<table>
  <!--collumn名-->
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <!--booksの内容-->
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <tr><%= book.title %></tr>
        <tr><%= book.body %></tr>
        <tr><%= link_to "Show", book_path(book.id) %></tr>
        <tr><%= link_to "Edit", edit_book_path(book.id) %></tr>
        <tr><%= link_to "Destroy", book_path(book.id), method: :delete %></tr>
      <% end %>
    </tr>
  </tbody>

</table>

<!--新規投稿-->
<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <div class = "field">
    <%= f.label :title, "title" %>
    <%= f.text_field :title, class: "book_title" %>
  </div>
  <div class = "field">
    <%= f.label :body, "body" %>
    <%= f.text_area :title, class: "book_title" %>
  </div>
  <div class = "actions">
    <%= f.submit "Create Book" %>
  </div>


<% end %>